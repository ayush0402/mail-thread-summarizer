{
  "name": "gptmail",
  "description": "A chrome extension for gmail which automatically adds label to inbox list.",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [ "pageWorld.js" ],
  "permissions": [
    "https://mail.google.com/"
  ],
  "manifest_version": 2
}
